---
import { GitFork, Rocket } from 'lucide-astro';

const steps = [
  {
    icon: GitFork,
    title: "Clone & Configure",
    description: "Fork the repository and customize Bebop for your needs.",
    command: "git clone https://github.com/ddri/bebop",
    action: "Fork Repo",
  },
  {
    icon: Rocket,
    title: "Deploy",
    description: "Deploy to your preferred hosting platform in minutes.",
    command: "npm run deploy",
    action: "Read Deploy Guide",
  },
];
---

<section id="start" class="w-full py-20 bg-light-grey text-white">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12">
      How to Get Started
    </h2>
    <div class="flex flex-wrap justify-center gap-8">
      {steps.map((step) => (
        <div class="bg-dark-grey p-6 rounded-lg shadow-md flex flex-col items-center text-center w-full md:w-1/2 lg:w-1/4">
          <div class="mb-4">
            <step.icon class="h-10 w-10 text-primary" />
          </div>
          <h3 class="text-xl font-semibold mb-2">{step.title}</h3>
          <p class="text-gray-300 mb-4 flex-grow">{step.description}</p>
          <div class="space-y-3 w-full">
            <div class="bg-black/30 p-2 rounded-md font-mono text-sm w-full">
              {step.command}
            </div>
            <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 w-full bg-white/10 hover:bg-white/20">
              {step.action}
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>