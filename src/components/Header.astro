---
import { Github } from 'lucide-astro';
---

<header class="w-full py-4 px-6 bg-background">
  <div class="container mx-auto flex justify-between items-center">
    <a href="/" class="text-2xl font-bold text-primary">
      Bebop
    </a>
    <nav class="hidden md:flex space-x-6">
      <a href="#features" class="text-foreground hover:text-primary">
        Features
      </a>
      <a href="https://docs.bebop.sh" class="text-foreground hover:text-primary">
        Documentation
      </a>
      <a href="#community" class="text-foreground hover:text-primary">
        Community
      </a>
      <a href="https://github.com/bebop-cms/bebop" class="text-foreground hover:text-primary">
        GitHub
      </a>
    </nav>
    <a href="https://github.com/ddri/bebop" class="flex items-center gap-2">
      <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 gap-2">
        <Github class="h-4 w-4" />
        <span>Star on GitHub</span>
      </button>
    </a>
  </div>
</header>